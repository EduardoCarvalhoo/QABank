<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordRegistrationFragment">

    <TextView
        android:id="@+id/fragment_password_registration_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fragment_password_registration_title_text"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_password_registration_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/fragment_password_registration_description_text"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_password_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_password_registration_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_password_registration_title_text_view" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_password_registration_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/primaryColor"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/primaryColor"
        app:layout_constraintEnd_toStartOf="@+id/fragment_password_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_password_registration_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_password_registration_description_text_view"
        app:layout_constraintWidth_max="488dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_password_registration_text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:hint="@string/fragment_password_registration_title_text"
            android:inputType="text"
            android:maxLength="40" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/fragment_password_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_password_registration_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_password_registration_text_input_layout">

        <TextView
            android:id="@+id/fragment_password_registration_letters_numbers_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@string/fragment_password_registration_first_criterion_text"
            app:drawableStartCompat="@drawable/ic_gray_circle" />

        <TextView
            android:id="@+id/fragment_password_registration_minimum_characters_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@string/fragment_password_registration_second_criterion_text"
            app:drawableStartCompat="@drawable/ic_gray_circle" />

        <TextView
            android:id="@+id/fragment_password_registration_minimum_of_capital_letters_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@string/fragment_password_registration_third_criterion_text"
            app:drawableStartCompat="@drawable/ic_gray_circle" />

        <TextView
            android:id="@+id/fragment_password_registration_minimum_of_lowercase_letters_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@string/fragment_password_registration_fourth_criterion_text"
            app:drawableStartCompat="@drawable/ic_gray_circle" />

        <TextView
            android:id="@+id/fragment_password_registration_minimum_special_characters_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@string/fragment_password_registration_fifth_criterion_text"
            app:drawableStartCompat="@drawable/ic_gray_circle" />

    </LinearLayout>

    <Button
        android:id="@+id/fragment_password_registration_advance_button"
        style="@style/Widget.QABank.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/primaryColor"
        android:padding="16dp"
        android:text="@string/button_advance_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_password_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_password_registration_start_guideline"
        app:layout_constraintWidth_max="320dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_password_registration_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_password_registration_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>