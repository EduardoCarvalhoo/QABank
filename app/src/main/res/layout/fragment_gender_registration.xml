<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GenderRegistrationFragment">

    <TextView
        android:id="@+id/fragment_gender_registration_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fragment_gender_registration_title_text"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_gender_registration_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/fragment_gender_registration_description_text"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_gender_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_gender_registration_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_gender_registration_title_text_view" />

    <LinearLayout
        android:id="@+id/fragment_gender_registration_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_max="320dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/fragment_gender_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_gender_registration_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/fragment_gender_registration_description_text_view">

        <LinearLayout
            android:id="@+id/fragment_gender_registration_container_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_background"
            android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/fragment_gender_registration_radio_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:text="@string/fragment_gender_registration_masculine_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_gender_registration_container_feminine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/radio_button_background"
            android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/fragment_gender_registration_radio_feminine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="16dp"
                android:text="@string/fragment_gender_registration_feminine_text" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_gender_registration_advance_button"
        style="@style/Widget.QABank.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/primaryColor"
        android:padding="16dp"
        android:text="@string/button_advance_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_gender_registration_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/fragment_gender_registration_start_guideline"
        app:layout_constraintWidth_max="320dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_gender_registration_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_gender_registration_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>